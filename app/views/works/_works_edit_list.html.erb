<div class="data-list content-panel">
	<% iters = 0 %>
	<% @works.each do |work| %>
		<div class="<%= iters.even? ? 'list-item-even' : 'list-item-odd' %> ">
			<div class="pull-right" style="text-align: right">
				<div>Reads   <%= work.read_count %></div>
				<div>Downloads   <%= work.downloaded %></div>
				<div>Donated   <%= work.donated %></div>
			</div>
			<a href="/works/<%= work.id %>/edit" style="height: 100%; width: 100%;">
				<div class="pull-left"><img style="height: 60px;" src="#" /></div>
				<div><%= work.title %></div>
				<div><%= link_to work.author_name, work.user %></div>
				<div style="width: 90%;"><%= work.blurb %></div>
			</a>
		</div>
		
		<% iters = iters + 1 %>
	<% end %>
</div>