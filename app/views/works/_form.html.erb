<%= form_for(@work) do |f| %>
  <%= render 'works/work_error_messages' %>
  
  <div class="form-row">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-input" %>
  </div>
  <div class="form-row">
    <%= f.label :author_name,"Publish As", class: "form-label" %>
    <%= f.text_field :author_name, class: "form-input" %>
  </div>
  <div class="form-row">
    <%= f.label :blurb, class: "form-label"%>
  </div>
  <div class="form-row">
    <%= f.text_area :blurb, class: "form-input rich-text-sm" %>
  </div>
  <div class="form-row">
  	<%= f.label :genre, class: "form-label" %>
    <%= genre_select_tag 'work[genre]', class: "form-input"%>
  </div>
  <div class="form-row">
    <%= f.label :body, class: "form-label" %>
  </div>
  <div class="form-row">
    <%= f.text_area :body, class: "centered rich-text-lg" %>
  </div>
  <div class="">
    <%= f.label :mature, "Does this work contain mature content?", class: "form-label" %>
    <%= f.check_box :mature, class: "fi-check" %>
  </div>
  <div class="actions centered">
    <%= f.button "Publish", class: "btn btn-larg bttn pull-right" %>
    <%= f.button "Save As Draft", class: "btn btn-larg bttn pull-left", formaction: drafts_path + '/' + @work.id.to_s %>
  </div>
<% end %>
