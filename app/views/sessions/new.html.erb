<% provide(:title, "Sign In")%>
<div class="content-panel">
	<div class="floating-grid2">
		<div class="cell">
			<h1><%= yield :title %></h1>
			
			<%= form_for(:session, url: sessions_path) do |f|%>
				<div class="mini-grid2 content-pane">
					<%= f.label :email, "Username or Email", class: 'cell' %>
					<%= f.text_field :email, class: 'cell' %>
				</div>
				<div class="mini-grid2 content-pane">
					<%= f.label :password, class: 'cell' %>
					<%= f.password_field :password, class: 'cell' %>
				</div>
				<div class="content-pane">
					<%= f.submit "Sign in", class: "btn btn-large btn-primary"%>
				</div>
			<% end %>
		</div>
		<div class="cell content-pane">
			<h1>Don't have an account?</h1>
