<% provide(:title, 'Signup')%>
<%= page_title_tag "Joingraphx.png" %>
<div class="row">
	<div class="col-lg-4 col-md-5 col-sm-6 col-xs-6 centered content-panel">
		<%= form_for(@user) do |f| %>
		
			<%= render 'users/user_error_messages' %>
		
			<div class="form-row">
				<%= f.label :first_name, "First Name", class: "form-label" %>
				<%= f.text_field :first_name, class: "form-input"%>
			</div>
			
			<div class="form-row">
				<%= f.label :last_name, "Last Name", class: "form-label" %>
				<%= f.text_field :last_name, class: "form-input" %>
			</div>
			
			<div class="form-row">
				<%= f.label :email, "Email", class: "form-label" %>
				<%= f.text_field :email, class: "form-input" %>
			</div>
			
			<div class="form-row">
				<%= f.label :bio, "Bio", class: "form-label" %>
				<%= f.text_area :bio, class: "form-input small" %>
			</div>
			
			<div class="form-row">
				<%= f.label :password, "Password", class: "form-label" %>
				<%= f.password_field  :password, class: "form-input" %>
			</div>
			
			<div class="form-row">
				<%= f.label :password_confirmation, "Confirm?", class: "form-label" %>
				<%= f.password_field :password_confirmation, class: "form-input" %>
			</div>
		
			<br /><%= f.submit "Create Account", class: "btn btn-large bttn centered"%>
		<% end %>
	</div>
</div>
