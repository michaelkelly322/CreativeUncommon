<% provide(:title, 'Signup')%>
<div class="row">
	<div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 centered content-panel" style="margin-top: 80px;">
		<%= form_for(@user) do |f| %>
		
			<%= render 'users/user_error_messages' %>
		
			<div class="form-row">
				<%= f.label :first_name, "First Name", class: "form-label" %>
				<%= f.text_field :first_name, class: "form-input"%>
			</div>
			
			<div class="form-row">
				<%= f.label :last_name, "Last Name", class: "form-label" %>
				<%= f.text_field :last_name, class: "form-input" %>
			</div>
			
			<div class="form-row">
				<%= f.label :username, "Username", class: "form-label" %>
				<%= f.text_field :username, class: "form-input" %>
			</div>
			
			<div class="form-row">
				<%= f.label :email, "Email", class: "form-label" %>
				<%= f.text_field :email, class: "form-input" %>
			</div>
			
			<div class="form-row">
				<%= f.label :bio, "Bio", class: "form-label" %>
				<%= f.text_area :bio, class: "form-input" %>
			</div>
			
			<div class="form-row">
				<%= f.label :password, "Password", class: "form-label" %>
				<%= f.password_field  :password, class: "form-input" %>
			</div>
			
			<div class="form-row">
				<%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
				<%= f.password_field :password_confirmation, class: "form-input" %>
			</div>
		
			<%= f.submit "Create Account", class: "btn btn-large btn-primary centered"%>
		<% end %>
	</div>
</div>
