

<% provide(:title, @user.first_name + ' ' + @user.last_name) %>

<!-- Tailored "What's New" horizontal across top -->
<div class="floating-grid3">
	<div class="cell">
		<!-- Profile photo -->
		<div class="content-panel">
			<%= image_tag "xxx", height: '100' %>
		</div>
		
		<!-- User Bio -->
		<div class="content-panel">
			<%= @user.bio %>
		</div>
	</div>
	<div class="cell">
		<!-- Pen Name -->
		<div class="content-panel">
			<%= yield :title %>
		</div>
		
		<!-- User Since -->
		<div class="content-panel">
			User Since <%= @user.created_at.year %>
		</div>
		
		<!-- Stories -->
		<div class="content-panel">
			<% if signed_in? %>
				<a href="#"><%= image_tag "PostStory.png" %></a>
			<% else %>
				<a href="/search?author=<%= @user.id %>"><%= image_tag "PostStory.png"%></a>
			<% end %>
		</div>
		
		<!-- Most popular story -->
		<div class="content-panel">
			<div class="list-item-even">
				<a href="/works/<%= @popular.id %>" style="height: 100%; width: 100%;">
				<div class="pull-left"><img style="height: 60px;" src="#" /></div>
				<div><%= @popular.title %></div>
				<div><%= link_to @popular.author_name, @popular.user %></div>
				<div><%= @popular.blurb %></div>
				</a>
			</div>
		</div>
	</div>
	
	
	<div class="cell">
		<!-- User stats -->
		<div class="content-panel">
			<div>Stories Published: <%= @user.works.length %></div>
			<div>Total Reads: <%= @user.works.sum(:read_count) %></div>
			<div>Amount Donated: </div>
			<div>Amount Recieved: </div>
		</div>
		
		<!-- Donate -->
		<div class="content-panel">
			<a href="#"><%= image_tag "Donate.png"%></a>
		</div>
	</div>
	
	
	
</div>

