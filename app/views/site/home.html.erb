<div class="floating-grid3">
	<div class="cell">
		<div class="content-panel">
			<a href="/faq"><%= image_tag 'FAQ Newb Guide.png' %></a>
		</div>
		
		<div class="content-panel">
			<a href="/search"><%= image_tag "BrowseStories.png" %></a>
		</div>
		
		<% if signed_in? %>
			<div class="content-panel">
				<a href="/works/new"><%= image_tag 'PostStory.png', height: '170', width: '220' %></a>
			</div>
		<% end %>
		
	</div>
	<div class="cell">
		<div class="content-panel">
			<%= image_tag "Donate.png" %>
		</div>
		
		<div class="content-panel">
			<%= image_tag "ToolsandLinks.png" %>
		</div>
		
		<% if !signed_in? %>
			<div class="content-panel">
				<a href="/signup"><%= image_tag "JoinNow.png" %></a>
			</div>
		<% else %>

		<% end %>
		
		<% if signed_in? %>
			<div class="content-panel">
				<%= image_tag 'ProfileView.png' %>
			</div>
		<% end %>
		
	</div>
	<div class="cell">
		<div class="content-panel">
			<a href="<%= stats_path %>"><%= image_tag "Stats.png" %></a>
		</div>
		
		<% if !signed_in? %>
			<div class="content-panel">
				<a href="/signin"><%= image_tag "LogIn.png" %></a>
			</div>
		<% else %>
			<div class="content-panel">
				<%= link_to image_tag('Log Out.png'), logout_path, method: 'delete' %>
			</div>
			
		<% end %>
	</div>
</div>

