<% provide(:title, 'Pocket Prompt Stories') %>

<div class="floating-grid3">
	<div class="cell">
		<% @first_keys.each do |key| %>
			<div class="content-panel">
				<div class="reading-pane" style="font-size: smaller;">
					<div class="text"><%= key %></div><%= simple_format @content[key] %>
				</div>
			</div>
		<% end %>
	</div>

	<div class="cell">
		<% @mid_keys.each do |key| %>
			<div class="content-panel">
				<div class="reading-pane" style="font-size: smaller;">
					<div class="text"><%= key %></div><%= simple_format @content[key] %>
				</div>
			</div>
		<% end %>
	</div>
	
	<div class="cell">
		<% @last_keys.each do |key| %>
			<div class="content-panel">
				<div class="reading-pane" style="font-size: smaller;">
					<div class="text"><%= key %></div><%= simple_format @content[key] %>
				</div>
			</div>
		<% end %>
	</div>
</div>
